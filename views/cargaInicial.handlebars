<div class="container">
  <h2 class="text-center">CARGA DE LA ORDEN {{order}}</h2>
  <div>
    <form action="/api/items" method="post">
      <div class="mb-3" hidden>
        <input
          type="text"
          name="order"
          class="form-control"
          value="{{order}}"
        />
      </div>
      <div class="mb-3">
        <label for="supplier" class="form-label">Proveedor</label>
        <input type="text" name="supplier" class="form-control" />
      </div>
      <div class="mb-3">
        <label for="title" class="form-label">Material</label>
        <input type="text" name="title" class="form-control" />
      </div>
      <div class="mb-3">
        <label for="initialStock" class="form-label">Compra inicial</label>
        <input
          type="number"
          step="0.1"
          name="initialStock"
          class="form-control"
        />
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Cargar</button>
      </div>
    </form>
  </div>
  <div>
    <table class="table table-striped-columns text-center">
      <thead>
        <tr>
          <th scope="col">Proveedor</th>
          <th scope="col">Material</th>
          <th scope="col">Stock inicial</th>
        </tr>
      </thead>
      <tbody>
        {{#each initialOrder}}
          <tr>
            <td>
              {{supplier}}
            </td>
            <td>
              {{title}}
            </td>
            <td>
              {{initialStock}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>