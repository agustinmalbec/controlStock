<div class="container">
  <h2 class="text-center">ORDEN {{nOrder}}</h2>
  <h3>Carga inicial</h3>
  <button
    onclick="imprimirTablas('initialOrder')"
    class="btn btn-primary"
  >Imprimir</button>
  <table class="table table-striped-columns text-center">
    <thead>
      <tr>
        <th scope="col">Proveedor</th>
        <th scope="col">Material</th>
        <th scope="col">Stock inicial</th>
        <th scope="col">Restan</th>
        <th scope="col">Editar</th>
      </tr>
    </thead>
    <tbody>
      {{#each initialOrder}}
        <tr>
          <td>
            {{supplier}}
          </td>
          <td>
            {{title}}
          </td>
          <td>
            {{initialStock}}
          </td>
          <td>
            {{actualStock}}
          </td>
          <td>
            <button
              type="button"
              class="btn btn-primary edit"
              data-bs-toggle="modal"
              data-bs-target="#{{_id}}"
            >
              Editar
            </button>
            <div
              class="modal fade"
              id="{{_id}}"
              tabindex="-1"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title fs-5">{{title}}</h4>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <form action="/api/items/update/{{_id}}" method="post">
                      <div class="mb-3">
                        <label for="initialStock" class="form-label">Stock
                          inicial</label>
                        <input
                          type="number"
                          step="0.1"
                          name="initialStock"
                          class="form-control"
                        />
                      </div>
                      <button
                        type="submit"
                        class="btn btn-primary mb-3"
                      >Editar</button>
                    </form>
                    <form action="/api/items/delete/{{_id}}" method="post">
                      <button
                        type="submit"
                        class="btn btn-primary mb-3"
                      >Eliminar</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <table id="initialOrder" class="table text-center tablaImprimir" hidden>
    <thead>
      <tr>
        <th scope="col">Proveedor</th>
        <th scope="col">Material</th>
        <th scope="col">Stock inicial</th>
        <th scope="col">Restan</th>
      </tr>
    </thead>
    <tbody>
      {{#each initialOrder}}
        <tr>
          <td>
            {{supplier}}
          </td>
          <td>
            {{title}}
          </td>
          <td>
            {{initialStock}}
          </td>
          <td>
            {{actualStock}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <h3>Ingresos</h3>
  <button
    onclick="imprimirTablas('remitos')"
    class="btn btn-primary"
  >Imprimir</button>
  <table class="table table-striped-columns text-center">
    <thead>
      <tr>
        <th scope="col">Remito</th>
        <th scope="col">Proveedor</th>
        <th scope="col">Material</th>
        <th scope="col">Ingreso</th>
        <th scope="col">Editar</th>
      </tr>
    </thead>
    <tbody>
      {{#each order}}
        <tr>
          <td>
            {{remito}}
          </td>
          <td>
            {{supplier}}
          </td>
          <td>
            {{title}}
          </td>
          <td>
            {{stock}}
          </td>
          <td>
            <button
              type="button"
              class="btn btn-primary edit"
              data-bs-toggle="modal"
              data-bs-target="#{{_id}}"
            >
              Editar
            </button>
            <div
              class="modal fade"
              id="{{_id}}"
              tabindex="-1"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title fs-5">{{title}}</h4>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <form action="/api/items/update/{{_id}}" method="post">
                      <div class="mb-3">
                        <label for="remito" class="form-label">Remito</label>
                        <input
                          type="number"
                          step="0.1"
                          name="remito"
                          class="form-control"
                        />
                      </div>
                      <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input
                          type="number"
                          step="0.1"
                          name="stock"
                          class="form-control"
                        />
                      </div>
                      <button
                        type="submit"
                        class="btn btn-primary mb-3"
                      >Editar</button>
                    </form>
                    <form action="/api/items/delete/{{_id}}" method="post">
                      <button
                        type="submit"
                        class="btn btn-primary mb-3"
                      >Eliminar</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <table id="remitos" class="table text-center tablaImprimir" hidden>
    <thead>
      <tr>
        <th scope="col">Remito</th>
        <th scope="col">Proveedor</th>
        <th scope="col">Material</th>
        <th scope="col">Ingreso</th>
      </tr>
    </thead>
    <tbody>
      {{#each order}}
        <tr>
          <td>
            {{remito}}
          </td>
          <td>
            {{supplier}}
          </td>
          <td>
            {{title}}
          </td>
          <td>
            {{stock}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>